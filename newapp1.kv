WindowManager:
    First:

<First>:
    name:'first'
    ScreenWallpaper:
        size :320,500
        AsyncImage:
            allow_stretch: True
            keep_ratio:False
            source:'https://img.freepik.com/free-vector/shiny-white-gray-background-with-wavy-lines_1017-25101.jpg?w=360'
      
    ScrollView:
        #do_scroll_x: True
        do_scroll_y: True
        MDFloatLayout:
            #md_bg_color: rgba(0,0,45,255)
            size_hint_y: None
            pos_hint: {"center_x":0.5,"center_y":0.5}
            height: dp(1500)
            width: dp(800)
            MDLabel:
                text:'In Picture'
                font_style: 'Button'
                font_size: 40
                halign: "center"
                size_hint_y: None
                pos_hint: {"center_x":.5,"center_y":.98}
                padding_y: 10   
                text_color: rgba(0,0,45,255)

            MDLabel:
                text: "Main-Image"
                markup: True
                pos_hint: {"center_x":0.22,"center_y":0.90}
                halign: "center"
                
            MDLabel:
                text: "Template-Image"
                markup: True
                pos_hint: {"center_x":0.78,"center_y":0.90}
                halign: "center"

            MDLabel:
                text: "Accuracy"
                markup: True
                pos_hint: {"center_x":0.5,"center_y":0.82}
                halign: "center"

            MDSlider:
                id: progress_slider
                hint: True
                hint_bg_color: "red"
                hint_text_color: "white"
                hint_radius: [6, 0, 6, 0]
                pos_hint: {"center_x":0.5,"center_y":0.78}    
                size_hint:(0.25,0.3)
                
            Screen:
                size:root.height,root.width
                MDRoundFlatIconButton:
                    text: "Select Image"
                    icon: "folder"
                    font_style: 'Button'
                    font_size: "15dp"
                    size_hint:0.07,0.02
                    background_color: 1, 1, 1, 1
                    text_color: rgba(0,0,45,255)
                    theme_icon_color: "Custom"
                    icon_color: rgba(0,0,45,255)
                    line_color: rgba(0,0,45,255)
                    pos_hint: {'center_x': .22, 'center_y': .57}
                    on_release: root.file_manager_open()

                Image:
                    id:image
                    icon: "image"
                    source: 'photo.png'
                    pos_hint: {'center_x': .22, 'center_y': .75}
                    size_hint: None,None
                    size: 400,400

            Screen:
                size:root.height,root.width
                MDRoundFlatIconButton:
                    text: "Select Image"
                    icon: "folder"
                    font_style: 'Button'
                    font_size: "15dp"
                    size_hint:0.07,0.02
                    background_color: 1, 1, 1, 1
                    text_color: rgba(0,0,45,255)
                    theme_icon_color: "Custom"
                    icon_color: rgba(0,0,45,255)
                    line_color: rgba(0,0,45,255)
                    pos_hint: {'center_x': .78, 'center_y': .57}
                    on_release: root.file_manager_open()

                Image:
                    id:image1
                    source: 'photo.png'
                    pos_hint: {'center_x': .78, 'center_y': .75}
                    size_hint: None,None
                    size: 400,400
            MDRoundFlatIconButton:
                text: "Find"
                font_style: 'Button'
                font_size: "15dp"
                size_hint:0.07,0.02
                background_color: 1, 1, 1, 1
                text_color: rgba(0,0,45,255)
                theme_icon_color: "Custom"
                icon_color: rgba(0,0,45,255)
                line_color: rgba(0,0,45,255)
                pos_hint: {'center_x': .50, 'center_y': .50}
                on_release: root.file_manager_open()
            Widget:
                id: separator
                size_hint_y: None
                height: 6
                pos_hint: {"center_x":0.50,"center_y":0.45}
                canvas:
                    Color:
                        rgb: 0., 0., 0.
                    Rectangle:
                        pos: 0, separator.center_y
                        size: separator.width, 2
            MDLabel:
                text: "Result"
                markup: True
                pos_hint: {"center_x":0.50,"center_y":0.40}
                halign: "center"

            Image:
                id:image2
                source: 'photo.png'
                pos_hint: {'center_x': .50, 'center_y': .25}
                size_hint: None,None
                size: 400,400


            MDRoundFlatIconButton:
                text: "Exit"
                font_style: 'Button'
                font_size: "15dp"
                size_hint:0.07,0.02
                background_color: 1, 1, 1, 1
                text_color: rgba(0,0,45,255)
                theme_icon_color: "Custom"
                icon_color: rgba(0,0,45,255)
                line_color: rgba(0,0,45,255)
                pos_hint: {'center_x': .50, 'center_y': .05}
                on_release: App.get_running_app().stop()



